extends layout

block content
    div(data-role='page')
        header(data-role='header')
        h1= title
        div.pure-u-1(data-role='content')
            - if(items.length)
            div.pure-g-r(data-role='listview')
            - items.forEach(function(item) {
                div.pure-u-1-3.photo-box
                    a(href='http://youtube.com/watch?v=' + item['href'], title=item['title'])
                        img(src='http://i1.ytimg.com/vi/' + item['href'] + '/hqdefault.jpg', alt='Thumbnail')
                    aside
                        h3.photo-box-caption= item['title']
                        p= item['time']
            - })
